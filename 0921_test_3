#break 和 continue 语句
#break语句

answer = input('我的名字是：')
bingo = 'ZH'

while True:
    if answer == bingo:
        print('恭喜你答对了')
        break
    else:
        answer = input('猜错啦，再猜吧:')


#continue语句
for i in range(10):
    if i%2 != 0:
        print(i)
        continue
    i += 2
    print(i)
